{
  "version": 2,
  "buildCommand": "cd ../.. && turbo run build --filter={apps/server}...",
  "builds": [
    {
      "src": "src/main.ts",
      "use": "@vercel/node",
      "config": {
        "helpers": false,
        "maxDuration": 60
      }
    },
    {
      "src": "../../packages/database/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/main.ts",
      "methods": [
        "GET",
        "POST",
        "PUT",
        "DELETE"
      ]
    }
  ]
}